
#MODE = -DNDEBUG #per compilare in modalita' release

MODE =  # per compilare in modalita' debug

main.out: main.o project.o
	g++ $(MODE) main.o project.o -o main.out

main.o: main.cpp
	g++ $(MODE)  -c main.cpp -o main.o

project.o: project.h
	g++ $(MODE) -c project.h -o project.o

.PHONY: clean

clean:
	rm *.out *.o
